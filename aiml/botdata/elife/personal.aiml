<category>
<pattern>*</pattern>
<that>* WHAT IS YOUR NAME</that>
<template>
    Great to meet you <set name="name"><star/></set>!
    <srai>ASKPERSONALQS</srai>
</template>
</category>

<category>
<pattern>*</pattern>
<that>* WHEN * BORN</that>
<template>
    <think><set name="birthdate"><star/></set></think>
    I was born 174 days, 3 hours, 27 minutes, and 32 seconds ago.
    <srai>ASKPERSONALQS</srai>
</template>
</category>

